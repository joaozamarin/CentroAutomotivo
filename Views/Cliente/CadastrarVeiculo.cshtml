@model CentroAutomotivo.Models.Veiculo
@{
    ViewData["Title"] = "Cadastrar Veículo";
    Layout = "~/Views/Shared/_LayoutCliente.cshtml";
}

<div class="section-header" style="padding-bottom: 20px;">
    <h2 class="">Cadastrar Veículo</h2>
</div>

<form asp-action="CadastrarVeiculo" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-lg-7">
            <div class="row">
                <div class="form-group col-6">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" placeholder="Nome" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="AppUserId" class="control-label"></label>
                    <input readonly asp-for="AppUser.Nome" class="form-control" placeholder="Nome" />
                    <input hidden asp-for="AppUserId" class="form-control" placeholder="Nome" />
                </div>
            </div>
            <div class="row mt-3">
                <div class="form-group col-3">
                    <label asp-for="Placa" class="control-label"></label>
                    <input asp-for="Placa" class="form-control" placeholder="ABC-9999" />
                    <span asp-validation-for="Placa" class="text-danger"></span>
                </div>
                <div class="form-group col-4">
                    <label asp-for="ModeloId" class="control-label"></label>
                    <select id="modelo" asp-for="ModeloId" class="form-control custom-select" asp-items="ViewBag.ModeloId">
                        <option selected disabled>Selecione...</option>
                    </select>
                </div>
                <div id="modeloAno" class="form-group col-2" style="display: none;">
                    <label class="control-label">Ano</label>
                    <input readonly id="ano" class="form-control" />
                </div>
                <div id="modeloMarca" class="form-group col-3" style="display: none;">
                    <label class="control-label">Marca</label>
                    <input readonly id="marca" class="form-control" />
                </div>
            </div>
            <div class="form-group mt-5">
                <input type="submit" value="Salvar" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-danger">Cancelar</a>
            </div>
        </div>
        <div class="col-lg-5">
            <div class="row d-flex flex-column align-items-center">
                <div class="form-group col-12 custom">
                    <label asp-for="Imagem" class="control-label"></label>
                    <div id="uploadImg">
                        <div class="d-flex align-items-center justify-content-center"
                            style="width: 475px; height: 375px; border-radius: 10px; cursor: pointer; background: #F2F2F2;">
                            <div class="d-flex align-items-center justify-content-center"
                                style="width: 200px; height: 200px; border-radius: 50%;background: #E4E4E4">
                                <div class="text-center d-flex flex-column align-items-center justify-content-center"
                                    style="font-size: 20px; font-weight: 500;">
                                    Fazer Upload
                                    <svg class="mt-2" width="28" height="28" viewBox="0 0 24 24" fill="none"
                                        xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                                        <rect width="24" height="24" fill="url(#pattern0)" />
                                        <defs>
                                            <pattern id="pattern0" patternContentUnits="objectBoundingBox" width="1"
                                                height="1">
                                                <use xlink:href="#image0_1172_58" transform="scale(0.0416667)" />
                                            </pattern>
                                            <image id="image0_1172_58" width="24" height="24"
                                                xlink:href="data:image/png;base64," />
                                        </defs>
                                    </svg>
                                </div>
                            </div>
                        </div>
                    </div>
                    <input id="input" hidden type="file" asp-for="Imagem" class="form-control"
                        accept=".jpg,.jpeg,.png,.gif,.jfif" />
                </div>
            </div>
            <img src="" class="img-fluid border" id="PreviewImage" style="display: none; width: 100%; border-radius: 10px; cursor: pointer;" />
        </div>
    </div>
</form>

@section Scripts {
    <script>
        window.addEventListener('load', function () {
            document.querySelector('input[type="file"]').addEventListener('change', function () {
                if (this.files && this.files[0]) {
                    var img = document.getElementById('PreviewImage');
                    img.src = URL.createObjectURL(this.files[0]);
                    $('#PreviewImage').show();
                    $('#uploadImg').hide();
                }
            });
        });

        $('#uploadImg').click(() => {
            $('#input').click();
        })

        $('#PreviewImage').click(() => {
            $('#input').click();
        })

        $('#modelo').change(() => {
            let modeloId = document.getElementById('modelo').value;

            $.ajax({
                url: '/Modelo/ObterModelo/' + modeloId,
                dataType: 'json',
                success: function (response) {
                    document.getElementById('ano').value = response['ano'];
                    document.getElementById('marca').value = response['marca']['nome'];

                    $('#modeloAno').show();
                    $('#modeloMarca').show();
                }
            });
        })
    </script>
}