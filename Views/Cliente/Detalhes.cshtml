@model CentroAutomotivo.Models.Veiculo
@{
    ViewData["Title"] = "Detalhes";
    Layout = "~/Views/Shared/_LayoutCliente.cshtml";
}

<div class="section-header" style="padding-bottom: 20px;">
    <h2 class="">Detalhes</h2>
</div>

<div class="row">
    <div class="col-lg-7">
        <div class="row">
            <div class="form-group col-6">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" readonly class="form-control" placeholder="Nome" />
            </div>
            <div class="form-group col-6">
                <label asp-for="AppUserId" class="control-label"></label>
                <input readonly asp-for="AppUser.Nome" class="form-control" placeholder="Nome" />
            </div>
        </div>
        <div class="row mt-3">
            <div class="form-group col-3">
                <label asp-for="Placa" class="control-label"></label>
                <input asp-for="Placa" readonly class="form-control" />
            </div>
            <div class="form-group col-4">
                <label asp-for="ModeloId" class="control-label"></label>
                <input asp-for="Modelo.Nome" readonly class="form-control" />
            </div>
            <div class="form-group col-2">
                <label asp-for="Modelo.Ano" class="control-label"></label>
                <input asp-for="Modelo.Ano" readonly class="form-control" />
            </div>
            <div class="form-group col-3">
                <label asp-for="Modelo.MarcaId" class="control-label"></label>
                <input asp-for="Modelo.Marca.Nome" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group mt-5">
            <a asp-action="MeusVeiculos" class="btn btn-sm text-white" style="background: #07B0F2;">Voltar</a>
        </div>
    </div>
    <div class="col-lg-5">
        <div class="row d-flex flex-column align-items-center">
            <div class="form-group col-12 custom">
                <label asp-for="Imagem" class="control-label"></label>
            </div>
        </div>
        @{
            if (Model.Imagem is not null)
            {
                <img src="@Model.Imagem" class="img-fluid border" id="PreviewImage"
                style="width: 100%; border-radius: 10px; cursor: pointer;" />
            }
            else
            {
                <h4 class="text-center text-danger mt-4">Não há imagem cadastrada para esse Veículo</h4>
            }
        }
    </div>
</div>

<hr>

<div class="row mt-3">
    <div class="col-12">
        <h3>Ordens de Serviço</h3>

        @{
            if (Model.OrdensServico.Count == 0)
            {
                <h5 class="text-center text-danger">Não há Ordens de Serviço para esse Veículo</h5>
            }
            else
            {
                <div id="accordion">
                    @foreach (var ordem in Model.OrdensServico.Where(o => o.StatusOrdemServico.Nome == "Concluído").OrderByDescending(o => o.DataEntrada).ToList())
                    {
                        var collapsed = $"collapsed{ordem.Id}";
                        var date = ordem.DataEntrada.ToShortDateString();

                        <div class="card mt-3">
                            <div class="card-header" id="@ordem.Id">
                                <div class="collapsed d-flex align-items-center justify-content-between" data-toggle="collapse"
                            data-target="#@collapsed" aria-expanded="false" aria-controls="@collapsed"
                            style="cursor: pointer;">
                                    <h6 class="text-uppercase" style="color: #07B0F2;">
                                        Ordem Serviço - @date
                                    </h6>

                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                class="bi bi-arrow-down" viewBox="0 0 16 16">
                                        <path fill-rule="evenodd"
                                    d="M8 1a.5.5 0 0 1 .5.5v11.793l3.146-3.147a.5.5 0 0 1 .708.708l-4 4a.5.5 0 0 1-.708 0l-4-4a.5.5 0 0 1 .708-.708L7.5 13.293V1.5A.5.5 0 0 1 8 1z" />
                                    </svg>
                                </div>
                            </div>
                            <div id="@collapsed" class="collapse" aria-labelledby="@ordem.Id" data-parent="#accordion">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col">
                                            <div class="row d-flex justify-content-between">
                                                <div class="form-group col-3">
                                                    <label class="control-label">Data de Entrada</label>
                                                    <input readonly value="@ordem.DataEntrada.ToString("dd/MM/yyyy HH:mm")"
                                                class="form-control" />
                                                </div>
                                                <div class="form-group col-3" id="dataSaidaContainer">
                                                    <label class="control-label">Data de Saída</label>
                                                    <input readonly value="@ordem.DataSaida.ToString("dd/MM/yyyy HH:mm")"
                                                class="form-control" />
                                                </div>
                                                <div class="form-group col-3">
                                                    <label class="control-label">Status</label>
                                                    <input readonly value="@ordem.StatusOrdemServico.Nome" class="form-control"
                                                style="color: @ordem.StatusOrdemServico.Cor; font-weight: bold;" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    @if (ordem.Descricao is not null && ordem.Descricao != "")
                                    {
                                        <div class="row mt-2">
                                            <div class="col">
                                                <div class="form-group col-12">
                                                    <label class="control-label">Descrição</label>
                                                    <input readonly value="@ordem.Descricao" class="form-control" />
                                                </div>
                                            </div>
                                        </div>
                                    }
                                    <div class="row mt-4">
                                        <div class="col-6">
                                            <h6>Serviços</h6>
                                            <div class="d-flex justify-content-center">
                                                <table class="table table-striped table-bordered table-sm" style="width: 90%;">
                                                    <thead>
                                                        <tr>
                                                            <th style="width: 80%;">
                                                                Nome
                                                            </th>
                                                            <th>
                                                                Valor
                                                            </th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var servico in ordem.ServicosOrdem)
                                                        {
                                                            <tr>
                                                                <td>
                                                                    @servico.Servico.Nome
                                                                </td>
                                                                <td>
                                                                    R$ @servico.Servico.Preco
                                                                </td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <h6>Peças</h6>
                                            <div class="d-flex justify-content-center">
                                                <table class="table table-striped table-bordered table-sm" style="width: 90%;">
                                                    <thead>
                                                        <tr>
                                                            <th style="width: 60%;">
                                                                Nome
                                                            </th>
                                                            <th>
                                                                Quantidade
                                                            </th>
                                                            <th>
                                                                Valor
                                                            </th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var peca in ordem.PecasOrdem)
                                                        {
                                                            var preco = peca.Peca.Preco * peca.Quantidade;
                                                            <tr>
                                                                <td>
                                                                    @peca.Peca.Nome
                                                                </td>
                                                                <td>
                                                                    @peca.Quantidade
                                                                </td>
                                                                <td>
                                                                    R$ @preco
                                                                </td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        }
    </div>

</div>