@model CentroAutomotivo.Models.Modelo

@{
    ViewData["Title"] = "Detalhes Modelo";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Modelos</h1>
<h6>Detalhes</h6>
<hr />
<div class="row">
    <div class="col">
        <div class="row">
            <div class="form-group col-4">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" readonly />
            </div>
            <div class="form-group col-2">
                <label asp-for="Ano" class="control-label"></label>
                <input asp-for="Ano" class="form-control" readonly />
            </div>
            <div class="form-group col-2">
                <label asp-for="MarcaId" class="control-label"></label>
                <input asp-for="Marca.Nome" class="form-control" readonly />
            </div>
        </div>
        <div class="form-group">
            <a class="btn btn-info" asp-action="Edit" asp-route-id="@Model.Id">Alterar</a>
            <a asp-action="Index" class="btn btn-danger">Voltar</a>
        </div>
    </div>
</div>