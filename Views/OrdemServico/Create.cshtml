@model CentroAutomotivo.Models.OrdemServico

@{
    ViewData["Title"] = "Adicionar Ordem de Serviço";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Ordens de Serviço</h1>
<h6>Adicionar</h6>
<hr />
<div class="row">
    <div class="col">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="form-group col-3">
                    <label asp-for="DataEntrada" class="control-label"></label>
                    <input asp-for="DataEntrada" class="form-control" />
                    <span asp-validation-for="DataEntrada" class="text-danger"></span>
                </div>
                <div class="form-group col-3" hidden>
                    <label asp-for="DataSaida" class="control-label"></label>
                    <input asp-for="DataSaida" class="form-control" />
                    <span asp-validation-for="DataSaida" class="text-danger"></span>
                </div>
                <div class="form-group col-3">
                    <label asp-for="StatusOrdemServicoId" class="control-label"></label>
                    <select asp-for="StatusOrdemServicoId" class="form-control"
                        asp-items="ViewBag.StatusOrdemServicoId"></select>
                </div>
                <div class="form-group col-3">
                    <label class="control-label">Veículo</label>
                    <input value="@Model.Veiculo.Nome" class="form-control" readonly/>
                </div>
                <div class="form-group col-3">
                    <label class="control-label">Proprietário</label>
                    <input value="@Model.Veiculo.AppUser.Nome" class="form-control" readonly/>
                </div>
                <div class="form-group col-3" hidden>
                    <label asp-for="VeiculoId" class="control-label"></label>
                    <input asp-for="VeiculoId" class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="form-group col-6">
                    <label asp-for="Descricao" for="desc" class="control-label"></label>
                    <textarea asp-for="Descricao" id="desc" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-danger">Cancelar</a>
            </div>
        </form>
    </div>
</div>