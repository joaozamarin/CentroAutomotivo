@model IEnumerable<CentroAutomotivo.Models.Veiculo>

@{
    ViewData["Title"] = "Selecionar Veículo";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Ordens de Serviço</h1>
<h6>Selecioanr Veículo</h6>
<hr />

<div class="row">
    @foreach (var veiculo in Model)
    {
        <div class="col-6" style="cursor: pointer;" onclick="GetVeiculo(@veiculo.Id)">
            <div class="card mb-3 d-flex justify-content-center" style="min-height: 220px; max-height: 220px;">
                <div class="row no-gutters">
                    <div class="card-body d-flex align-items-center justify-content-center">
                        <div class="col-6 p-0">
                            @{
                                if (veiculo.Imagem is not null)
                                {
                                    <img src="@veiculo.Imagem" style="max-width: 100%;" alt="">
                                }
                                else
                                {
                                    <p class="text-center text-danger">Não há imagem cadastrada para esse veículo</p>
                                }
                            }
                        </div>
                        <div class="col-6">
                            <h5 class="card-title text-uppercase text-center">@veiculo.Nome</h5>
                            <p class="text"><span class="font-weight-bold">Modelo:</span> @veiculo.Modelo.Nome</p>
                            <p class="text"><span class="font-weight-bold">Marca:</span> @veiculo.Modelo.Marca.Nome</p>
                            <p class="text"><span class="font-weight-bold">Ano:</span> @veiculo.Modelo.Ano</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    @if (Model.Count() == 0)
    {
        <div class="col-sm-12 d-flex flex-column justify-content-center align-items-center">
            <h3 class="text-danger text-center">Não há veículos cadastrados para esse Usuário!</h3>
            <a class="btn mt-3" style="background: #07B0F2; color: white;" asp-controller="Veiculo"
                asp-action="Create">Cadastrar</a>
        </div>
    }
</div>

@section Styles{
    <style>
        .card:hover {
            border: 1px solid #07B0F2;
            transform: scale(1.05);
            transition: 1s;
            z-index: 1000;
        }
    </style>
}

@section Scripts{
    <script>
        function GetVeiculo(id) {
            window.location = '@Url.Action("Create", "OrdemServico")' + '?veiculoId=' + id;
        }
    </script>
}