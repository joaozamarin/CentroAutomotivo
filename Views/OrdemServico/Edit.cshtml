@model CentroAutomotivo.Models.OrdemServico

@{
    ViewData["Title"] = "Editar Ordem de Serviço";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Ordens de Serviço</h1>
<h6>Editar</h6>
<hr />
<div class="row">
    <div class="col">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="form-group col-3">
                    <label asp-for="DataEntrada" class="control-label"></label>
                    <input asp-for="DataEntrada" class="form-control" />
                    <span asp-validation-for="DataEntrada" class="text-danger"></span>
                </div>
                <div class="form-group col-3" id="dataSaidaContainer" style="display: none;">
                    <label asp-for="DataSaida" class="control-label"></label>
                    <input asp-for="DataSaida" class="form-control" />
                    <span asp-validation-for="DataSaida" class="text-danger"></span>
                </div>
                <div class="form-group col-3">
                    <label asp-for="StatusOrdemServicoId" class="control-label"></label>
                    <select asp-for="StatusOrdemServicoId" id="statusCombo" class="form-control"
                        asp-items="ViewBag.StatusOrdemServicoId"></select>
                    <span asp-validation-for="StatusOrdemServicoId" class="text-danger"></span>
                </div>
                <div class="form-group col-3">
                    <label class="control-label">Veículo</label>
                    <input value="@Model.Veiculo.Nome" class="form-control" readonly />
                </div>
                <div class="form-group col-3" hidden>
                    <label asp-for="VeiculoId" class="control-label"></label>
                    <input asp-for="VeiculoId" class="form-control" />
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-6">
                    <div class="row">
                        <div class="form-group col-12">
                            <h4>Serviços</h4>
                            <div class="d-flex">
                                <select id="servicoSelected" class="form-control mr-2" asp-items="ViewBag.Servicos">
                                    <option disabled selected>Selecione...</option>
                                </select>
                                <input hidden id="inputServicos" type="text" name="servicoSelected">
                                <button onclick="addServico()" type="button"
                                    class="btn btn-outline-info btn-sm">Adicionar</button>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <table id="servicos" class="table table-striped table-bordered table-sm">
                                <thead>
                                    <tr>
                                        <th style="width: 50%;">
                                            Nome
                                        </th>
                                        <th>
                                            Valor
                                        </th>
                                        <th class="text-center" style="width: 15%;">
                                            Ação
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var servico in Model.ServicosOrdem)
                                    {
                                        var id = $"{servico.ServicoId}servico";
                                        <tr id="@id">
                                            <td>@servico.Servico.Nome</td>
                                            <td>R$ @servico.Servico.Preco</td>
                                            <td class="d-flex justify-content-center">
                                                <a onclick='removerServico(@servico.ServicoId)' title="Excluir" class="text-danger" style="cursor: pointer;">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="#de2935" class="bi bi-trash-fill"
                                                        viewBox="0 0 16 16">
                                                        <path
                                                            d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z" />
                                                    </svg>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="col-6">
                    <div class="row">
                        <div class="form-group col-12">
                            <h4>Peças</h4>
                            <div class="d-flex">
                                <select id="pecas" class="form-control mr-2" asp-items="ViewBag.Pecas">
                                    <option disabled selected>Selecione...</option>
                                </select>
                                <select id="pecasQtd" class="form-control mr-2" style="max-width: 100px;">
                                    <option value="1" selected>1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="5">5</option>
                                </select>
                                <button type="button" class="btn btn-outline-info btn-sm">Adicionar</button>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <table class="table table-striped table-bordered table-sm">
                                <thead>
                                    <tr>
                                        <th style="width: 40%;">
                                            Nome
                                        </th>
                                        <th>
                                            Quantidade
                                        </th>
                                        <th>
                                            Valor
                                        </th>
                                        <th class="text-center" style="width: 15%;">
                                            Ação
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>Teste</td>
                                        <td>Teste</td>
                                        <td>Teste</td>
                                        <td class="text-center">X</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">

                        </div>
                    </div>
                </div>
            </div>

            <div class="row mt-4">
                <div class="form-group col-6">
                    <label asp-for="Descricao" for="desc" class="control-label"></label>
                    <textarea asp-for="Descricao" id="desc" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group mt-2">
                <input type="submit" value="Salvar" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-danger">Cancelar</a>
            </div>
        </form>
    </div>
</div>

<div id="accordion" class="mt-2">
    <div class="card">
        <div class="card-header" id="headingTwo">
            <div class="collapsed d-flex align-items-center justify-content-between" data-toggle="collapse"
                data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo" style="cursor: pointer;">
                <h5>
                    Veículo
                </h5>

                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor"
                    class="bi bi-arrow-down-circle" viewBox="0 0 16 16">
                    <path fill-rule="evenodd"
                        d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8zm15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v5.793L5.354 8.146a.5.5 0 1 0-.708.708l3 3a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 10.293V4.5z" />
                </svg>
            </div>
        </div>
        <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordion">
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-7">
                        <div class="row">
                            <div class="form-group col-6">
                                <label asp-for="Veiculo.Nome" class="control-label"></label>
                                <input asp-for="Veiculo.Nome" class="form-control" readonly />
                            </div>
                            <div class="form-group col-6">
                                <label asp-for="Veiculo.AppUserId" class="control-label"></label>
                                <input asp-for="Veiculo.AppUser.Nome" class="form-control" readonly />
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-4">
                                <label asp-for="Veiculo.Placa" class="control-label"></label>
                                <input asp-for="Veiculo.Placa" class="form-control" readonly />
                            </div>
                            <div class="form-group col-4">
                                <label asp-for="Veiculo.ModeloId" class="control-label"></label>
                                <input asp-for="Veiculo.Modelo.Nome" class="form-control" readonly />
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-5">
                        <div class="row">
                            <div class="form-group col-12 custom">
                                <label asp-for="Veiculo.Imagem" class="control-label"></label>
                                @if (Model.Veiculo.Imagem != null)
                                {
                                    <img src="@Model.Veiculo.Imagem" class="img-fluid border" alt=""
                                    style="min-width: 500px; height: auto; max-width: 100%;">
                                }
                                else
                                {
                                    <h4 class="text-center text-danger">Não há imagem para este Veículo</h4>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<input hidden id="ordemId" value="@Model.Id" type="text">

@section Scripts{
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    function Request(status) {
        $.ajax({
            url: '/OrdemServico/VerificarStatus',
            type: 'POST',
            data: { status: status },
            success: function (response) {
                if (response.mostrarDataSaida) {
                    $('#dataSaidaContainer').show();
                } else {
                    $('#dataSaidaContainer').hide();
                }
            }
        });
    }

    $(document).ready(function () {
        var statusOrdem = $('#statusCombo').val();

        Request(statusOrdem);

        $('#statusCombo').change(function () {
            var status = $(this).val();

            Request(status);
        });
    });

    // Adicionar Serviços
    let servicos = [];

    $(document).ready(function () {
        let id = document.getElementById('ordemId').value;
        let tableServicos = document.getElementById('servicos').rows.length;

        $.ajax({
            url: '/OrdemServico/GetServicosOrdem/' + id,
            dataType: 'json',
            success: function (response) {
                for (let servico of response) {
                    servicos.push(servico['servicoId']);
                }
            }
        })

        if (tableServicos <= 1) {
            $('#servicos').hide();
        }
    });

    $('#servicos').click(function() {
        let tableServicos = document.getElementById('servicos').rows.length;
        console.log(tableServicos);

        if (tableServicos <= 1) {
            $('#servicos').hide();
        }
    });

    function addServico() {
        let servico = document.getElementById('servicoSelected').value;
        let servicoExist = servicos.findIndex((s) => s == servico) != -1;

        if (servico == 'Selecione...') return;

        if (!servicoExist) {
            servicos.push(servico);

            $.ajax({
                url: '/Servico/ObterServico/' + servico,
                dataType: 'json',
                success: function (response) {
                    var row =
                        `<tr id='${servico}servico''>
                        <td> ${response.nome} </td>
                        <td> R$ ${response.preco},00 </td>
                        <td class="d-flex justify-content-center">
                            <a onclick='removerServico(${servico})' title="Excluir" class="text-danger" style="cursor: pointer;">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="#de2935" class="bi bi-trash-fill"
                                    viewBox="0 0 16 16">
                                    <path
                                        d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z" />
                                </svg>
                            </a>
                        </td>
                    </tr>`;

                    $('#servicos tbody').append(row);
                    $('#servicos').show();
                    console.log(response);
                }
            });

        } else {
            alert('Esse serviço já foi adicionado!');
        }
        document.getElementById('inputServicos').value = servicos;
    }

    function removerServico(id) {
        document.getElementById(id + 'servico').remove();

        let servico = servicos.findIndex((s) => s == id);
        servicos.splice(servico, 1)

        console.log(servicos);
        document.getElementById('inputServicos').value = servicos;
    }
</script>
}