<!DOCTYPE html>
<html lang="pt-br">

<head>
  <meta charset="utf-8">
  <meta content="width=device-width, initial-scale=1.0" name="viewport">

  <title>@ViewData["Title"] - JAVA Centro Automotivo</title>
  <meta content="" name="description">
  <meta content="" name="keywords">

  <!-- Favicons -->
  <link type="image/png" sizes="16x16" rel="icon" href="~/assets/img/icons8-carro-16.png">

  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,600;1,700&family=Roboto:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&family=Work+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap"
    rel="stylesheet">

  <!-- Vendor CSS Files -->
  <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <link href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
  <link href="~/assets/vendor/fontawesome-free/css/all.min.css" rel="stylesheet">
  <link href="~/assets/vendor/aos/aos.css" rel="stylesheet">
  <link href="~/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
  <link href="~/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

  <!-- Template Main CSS File -->
  <link href="~/assets/css/main.css" rel="stylesheet">
  <link href="~/css/site.css" rel="stylesheet">
  @await RenderSectionAsync("Styles", required: false)

  <!-- =======================================================
  * Template Name: UpConstruction - v1.3.0
  * Template URL: https://bootstrapmade.com/upconstruction-bootstrap-construction-website-template/
  * Author: BootstrapMade.com
  * License: https://bootstrapmade.com/license/
  ======================================================== -->
</head>

<body>

  <!-- ======= Header ======= -->
  <header id="header" class="header d-flex align-items-center">
    <div class="container-fluid container-xl d-flex align-items-center justify-content-between">

      <a asp-controller="Home" asp-action="Index" class="logo d-flex align-items-center">
        <!-- Uncomment the line below if you also wish to use an image logo -->
        <img src="~/assets/img/logo.png" alt="">
        <h1>Centro Automotivo.</h1>
      </a>

      <i class="mobile-nav-toggle mobile-nav-show bi bi-list"></i>
      <i class="mobile-nav-toggle mobile-nav-hide d-none bi bi-x"></i>
      <nav id="navbar" class="navbar">
        <ul>
          <li><a asp-controller="Home" asp-action="Index" class="active">Home</a></li>
          <li><a href="#sobre">Sobre</a></li>
          <li><a href="#servico">Serviços</a></li>
          <li><a href="#marca">Marcas</a></li>
          <li><a href="#contato">Contato</a></li>
          <partial name="_LoginPartial"></partial>
        </ul>
      </nav><!-- .navbar -->

    </div>
  </header><!-- End Header -->

  <!-- ======= Hero Section ======= -->
  <section id="hero" class="hero">

    <div class="info d-flex align-items-center">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-lg-6 text-center">
            <h2 data-aos="fade-down">Bem vindo a <br><span>JAVA Centro Automotivo</span></h2>
            <p data-aos="fade-up">Consulte nossos serviços e agende uma revisão para seu veículo!</p>
            <a data-aos="fade-up" data-aos-delay="200" href="#servico" class="btn-get-started">Ver Serviços</a>
          </div>
        </div>
      </div>
    </div>

    <div id="hero-carousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="5000">

      <div class="carousel-item active"
        style="background-image: url(assets/img/hero-carousel/pexels-vlad-alexandru-popa-1402787.jpg)">
      </div>
      <div class="carousel-item"
        style="background-image: url(assets/img/hero-carousel/pexels-abdulwahab-alawadhi-3422964.jpg)"></div>
      <div class="carousel-item"
        style="background-image: url(assets/img/hero-carousel/pexels-garvin-st-villier-3311574.jpg)"></div>
      <div class="carousel-item" style="background-image: url(assets/img/hero-carousel/pexels-jay-pizzle-3752194.jpg)">
      </div>

    </div>

  </section><!-- End Hero Section -->

  <main id="main">
    @RenderBody()
  </main>

  <!-- ======= Footer ======= -->
  <footer id="footer" class="footer bg-dark">

    <div class="footer-content position-relative">
      <div class="container">
        <div class="row justify-content-between">

          <div class="col-lg-4 col-md-6">
            <div class="footer-info">
              <h3>Centro Automotivo</h3>
              <p>
                Centro, 123 <br>
                Barra Bonita, SP<br><br>
                <strong>Telefone:</strong> (14) 998123-4456<br>
                <strong>Email:</strong> javacentroautomotivo@gmail.com<br>
              </p>
              <div class="social-links d-flex mt-3">
                <a href="#" class="d-flex align-items-center justify-content-center"><i class="bi bi-twitter"></i></a>
                <a href="#" class="d-flex align-items-center justify-content-center"><i class="bi bi-facebook"></i></a>
                <a href="#" class="d-flex align-items-center justify-content-center"><i class="bi bi-instagram"></i></a>
              </div>
            </div>
          </div><!-- End footer info column-->

          <div class="col-lg-2 col-md-3 footer-links">
            <h4>Links</h4>
            <ul>
              <li><a href="#">Home</a></li>
              <li><a href="#sobre">Sobre nós</a></li>
              <li><a href="#servico">Serviços</a></li>
              <li><a href="#marca">Marcas</a></li>
              <li><a href="#">Política de privacidade</a></li>
            </ul>
          </div><!-- End footer links column-->

          <div class="col-lg-2 col-md-3 footer-links">
            <h4>Nossos Serviços</h4>
            <ul>
              <li><a href="#">Mecânica Geral</a></li>
              <li><a href="#">Elétrica</a></li>
              <li><a href="#">Funilaria</a></li>
              <li><a href="#">Ar Condicionado</a></li>
              <li><a href="#">Revisão</a></li>
            </ul>
          </div><!-- End footer links column-->

        </div>
      </div>
    </div>

    <div class="footer-legal text-center position-relative">
      <div class="container">
        <div class="copyright">
          &copy; Copyright <strong><span>JAVA Centro Automotivo</span></strong>. Todos os direitos reservados
        </div>
      </div>
    </div>

  </footer>
  <!-- End Footer -->

  <a href="#" class="scroll-top d-flex align-items-center justify-content-center"><i
      class="bi bi-arrow-up-short"></i></a>

  <div id="preloader"></div>

  <!-- Vendor JS Files -->
  <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="~/assets/vendor/aos/aos.js"></script>
  <script src="~/assets/vendor/glightbox/js/glightbox.min.js"></script>
  <script src="~/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
  <script src="~/assets/vendor/swiper/swiper-bundle.min.js"></script>
  <script src="~/assets/vendor/purecounter/purecounter_vanilla.js"></script>
  <script src="~/assets/vendor/php-email-form/validate.js"></script>

  <!-- Template Main JS File -->
  <script src="~/assets/js/main.js"></script>
  <script src="~/js/site.js"></script>
  @await RenderSectionAsync("Scripts", required: false)

</body>

</html>